!!! XHTML
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'UTF-8'}
    %title
      != yield_content :title
    %link{:rel => 'stylesheet', :href => stylesheet_path('main'), :type => 'text/css'}
    %script{:type => 'text/javascript', :src => javascript_path('jquery')}
    != yield_content :head
  %body
    %div#content
      %div#header
        %h1
          != yield_content :title
          %br
          %img{:src => image_path('title.png')}
      %div#main
        != yield
      %hr
      %div#footer
        source code : 
        - src_url = 'https://github.com/akiroom/sinatra-template'
        %a{:href => src_url} #{src_url}
