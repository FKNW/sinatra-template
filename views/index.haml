- content_for :title do
  = @title

- content_for :head do
  :javascript
    var app_root = "#{app_root}";
    var omikuji_api = app_root+'/omikuji.json';
  %script{:type => 'text/javascript', :src => "#{app_root}/main.js"}

%div
  %input{:id => 'start_btn', :type => 'button', :value => 'start'}
%div
  %h2 result
  %ul#results
  %h2 log
  %div
    %ul
      %li これまでに#{@count}回おみくじが引かれました
      %li 最後に引いたのは#{@last}です
      %li 大吉は#{@count_daikichi}回でました
      %li 小吉以上は#{@count_kichi}回でました
      %li
        最近の結果です
        %ul
          - @latests.each do |o|
            %li= "#{o.result} - #{o.time}"
